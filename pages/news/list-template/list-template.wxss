.new-ul .new-list{
  background: white;
  padding: 8px 14px;
}
.new-ul .new-list .list-top{
   display: flex;
   flex-direction: row;
   align-items: center;
   padding: 5px 0px;
}
.new-ul .new-list .list-top image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 5px;
}
.new-ul .new-list .list-top text{
  margin-left: 8px;
}
.new-ul .new-list .list-title{
  font-weight: bold;
  font-size: 18px;
  margin: 4px 0px;
}
.new-ul .new-list .list-img image{
  width: 100%;
  border-radius: 5px;
  margin: 8px 0px;
}
.new-ul .new-list .list-article{
  font-size: 15px;
  color: #D1D0D1;
}
.new-ul .new-list .list-base{
   display: flex;
   flex-direction: row;
   padding: 8px 0px;
}
.new-ul .new-list .list-base view{
  margin-right: 25px;
}
.new-ul .new-list .list-base image{
  width: 14px;
  height: 14px;
  margin-right: 6px;
}